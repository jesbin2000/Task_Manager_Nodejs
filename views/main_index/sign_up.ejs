<%- include('../header.ejs') %>

<main class="container-fluid p-0 d-flex align-items-center justify-content-center bg-color">
    <div class="d-flex sec">
        <div class="login-view shadow p-4 d-flex flex-column gap-1 bg-light">
            <h3 class="text-center fw-bold">SIGN UP</h3>
            
            <% if (message) { %>
                <div class="errors text-danger text-center"><%= message %></div>
            <% } %>
            
            <form action="/signUp" class="d-flex flex-column gap-3" method="POST">
                <div class="d-flex flex-column">
                    <label for="username" class="fw-bold mb-2 d-flex justify-content-between" >User name</label>
                    <input type="text" id="username" name="username" class="rounded">
                </div>
                <div class="d-flex flex-column">
                    <label for="password" class="fw-bold mb-2">Password</label>
                    <input type="password" id="password" name="password" class="rounded">
                </div>
                <button type="submit" class="butn rounded py-2 fw-bolder my-3">Sign Up</button>
            </form>
            <p class="mb-3 mt-2">Already a user?<a href="/" class="text-decoration-none fw-bolder">Log in</i></a></p>
        </div>
    </div>
</main>

